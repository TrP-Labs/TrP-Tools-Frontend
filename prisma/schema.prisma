generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  Id            String  @id @unique
  createdAt     DateTime @default(now())

  identityToken String
  groupToken    String?

  sessions      Session[]
}

model Session {
  token         String @id
  userAgent     String

  userId        String
  user          User     @relation(fields: [userId], references: [Id])

  lastUsed      DateTime
  expiresAt     DateTime
  createdAt     DateTime @default(now())
}